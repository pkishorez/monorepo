{
  "name": "dynamodb-client",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*"
  },
  "scripts": {
    "dev": "tsc --watch --project build.tsconfig.json",
    "build": "tsc --project build.tsconfig.json",
    "generate": "bun src/generate.ts && prettier --write src/services/dynamodb/types.ts",
    "lint": "tsc --noEmit",
    "test": "vitest --reporter=verbose",
    "test:run": "vitest run --reporter=verbose",
    "test:watch": "vitest --watch --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.864.0",
    "aws4fetch": "^1.0.20",
    "effect": "3.17.7"
  },
  "devDependencies": {
    "@effect/platform": "^0.90.5",
    "@effect/platform-node": "^0.96.0",
    "@tsconfig/node22": "22.0.2",
    "@types/node": "24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
