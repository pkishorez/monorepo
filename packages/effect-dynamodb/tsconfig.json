{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "Dom"],
    "rootDir": ".",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["vitest/globals"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "node_modules"]
}
