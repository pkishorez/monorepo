{
  "name": "effect-dynamodb",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch --project build.tsconfig.json",
    "build": "tsc --project build.tsconfig.json",
    "lint": "pnpm lint:tsc && pnpm lint:eslint",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run --reporter=verbose",
    "test:watch": "vitest --watch --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose"
  },
  "dependencies": {
    "@aws-sdk/util-dynamodb": "3.896.0",
    "@monorepo/eschema": "workspace:*",
    "dynamodb-client": "workspace:*",
    "effect": "3.17.14"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/node22": "22.0.2",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv": "17.2.2",
    "eslint": "9.36.0",
    "type-fest": "^5.0.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
