{
  "name": "effect-dynamodb",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*"
  },
  "scripts": {
    "dev": "tsc --watch --project build.tsconfig.json",
    "build": "tsc --project build.tsconfig.json",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run --reporter=verbose",
    "test:watch": "vitest --watch --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose"
  },
  "dependencies": {
    "@aws-sdk/util-dynamodb": "3.883.0",
    "@monorepo/eschema": "workspace:*",
    "dynamodb-client": "workspace:*",
    "effect": "3.17.13"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/node22": "22.0.2",
    "@types/node": "24.3.1",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv": "17.2.2",
    "type-fest": "^5.0.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
