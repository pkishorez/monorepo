{
  "name": "@monorepo/eschema",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*",
      "import": "./dist/*"
    }
  },
  "scripts": {
    "build": "tsc --project build.tsconfig.json",
    "lint": "tsc --noEmit",
    "dev": "tsc --watch --project build.tsconfig.json",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@standard-schema/spec": "1.0.0",
    "effect": "3.17.13"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.2",
    "type-fest": "^5.0.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
