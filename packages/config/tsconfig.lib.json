{
  "compilerOptions": {
    "lib": ["ESNext"],

    // Enable ECMAScript module support
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Strict type-checking options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "declaration": true,
    "declarationMap": true,

    "outDir": "dist",
    "skipLibCheck": true
  }
}
