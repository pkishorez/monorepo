{
  "name": "@std-toolkit/db-dynamodb",
  "version": "0.0.1",
  "private": true,
  "description": "DynamoDB single-table abstraction with Effect integration and schema evolution",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "bun scripts/generate.ts",
    "lint": "tsc --noEmit",
    "play": "bun src/play/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@std-toolkit/eschema": "workspace:*",
    "aws4fetch": "1.0.20",
    "type-fest": "5.4.1"
  },
  "devDependencies": {
    "@effect/platform": "0.94.2",
    "@effect/platform-node": "0.104.1",
    "@effect/vitest": "0.27.0",
    "@tsconfig/node22": "22.0.5",
    "@types/node": "25.0.10",
    "effect": "3.19.15",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "effect": ">=3.0.0"
  }
}
