{
  "name": "@std-toolkit/dynamodb",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "tsc --project build.tsconfig.json",
    "dev": "tsc --watch --project build.tsconfig.json",
    "lint": "pnpm lint:tsc && pnpm lint:eslint",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:run": "vitest run --reporter=verbose",
    "test:watch": "vitest --watch --reporter=verbose"
  },
  "dependencies": {
    "@aws-sdk/util-dynamodb": "3.970.0",
    "@std-toolkit/core": "workspace:*",
    "@std-toolkit/dynamodb-client": "workspace:*",
    "@std-toolkit/eschema": "workspace:*",
    "effect": "3.19.14",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@effect/language-service": "0.65.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@tsconfig/node22": "22.0.5",
    "@types/node": "25.0.9",
    "@vitest/coverage-v8": "4.0.17",
    "dotenv": "17.2.3",
    "eslint": "9.39.2",
    "type-fest": "5.4.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  }
}
