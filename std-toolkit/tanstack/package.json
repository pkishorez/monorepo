{
  "name": "@std-toolkit/tanstack",
  "version": "0.0.1",
  "private": true,
  "description": "TanStack DB integration with evolving schema (eschema)",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*",
      "import": "./dist/*"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "tsc --noEmit",
    "play": "bun ./play/play.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@standard-schema/spec": "1.1.0",
    "@std-toolkit/cache": "workspace:*",
    "@std-toolkit/core": "workspace:*",
    "@std-toolkit/eschema": "workspace:*"
  },
  "devDependencies": {
    "@effect/vitest": "0.27.0",
    "@tanstack/react-db": "0.1.74",
    "@tsconfig/node22": "22.0.5",
    "@types/node": "25.3.3",
    "effect": "3.19.19",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "6.1.1",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "@tanstack/react-db": ">=0.1.64",
    "effect": ">=3.0.0"
  }
}
