{
  "name": "@std-toolkit/sqlite",
  "version": "0.0.1",
  "private": true,
  "description": "SQLite utilities with Effect",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapters/do": {
      "types": "./dist/sql/adapters/do.d.ts",
      "default": "./dist/sql/adapters/do.js"
    },
    "./adapters/better-sqlite3": {
      "types": "./dist/sql/adapters/better-sqlite3.d.ts",
      "default": "./dist/sql/adapters/better-sqlite3.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "tsc --noEmit",
    "play": "pnpm tsx ./play/play.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@std-toolkit/core": "workspace:*",
    "@std-toolkit/eschema": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20260124.0",
    "@effect/vitest": "0.27.0",
    "@tsconfig/node22": "22.0.5",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "25.0.10",
    "better-sqlite3": "12.6.2",
    "effect": "3.19.15",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "effect": ">=3.0.0"
  }
}
