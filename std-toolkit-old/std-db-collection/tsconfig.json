{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "Dom"],
    "rootDir": "src",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "plugins": [{ "name": "@effect/language-service" }]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
